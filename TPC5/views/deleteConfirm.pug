extends layout

block content
  .w3-card-4
    header.w3-container.w3-teal
      h1 Confirm Deletion
    .w3-container
        center
            h2 Task Description: #{t.desc} 
            h2 Due Date: #{t.date}
            br
            h2 Are you sure you want to delete this task?
            button.w3-btn.w3-round.w3-green.w3-margin
                a(href="/tasks/delete/"+t.id+"/confirm") Confirm 
            button.w3-btn.w3-round.w3-red.w3-margin
                a(href="/") Cancel
    footer.w3-container.w3-teal
      h5 Generated by EngWeb2023 in #{d}
